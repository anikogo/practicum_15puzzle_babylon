{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
  },
  "include": [
    "src",
    "src/**/*",
    "typings/**/*.d.ts",
    "./node_modules/@types",
    "./webpack.config.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}
