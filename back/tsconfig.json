{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "typings/**/*.d.ts",
      "node_modules/@types"
    ]
  },
  //  "files": [
  //   "./node_modules/@types/express/index.d.ts"
  // ],
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ],
}
